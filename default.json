{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "description": "Keep dependencies on all active branches up-to-date",
    "extends": [
        "config:recommended"
    ],
    "baseBranches": [
        "master",
        "release/12.0",
        "release/10.0"
    ],
    "packageRules": [
        {
            "description": "Disable major upgrades for release branches",
            "matchBaseBranches": [
                "release/10.0",
                "release/12.0"
            ],
            "matchUpdateTypes": ["major"],
            "enabled": false
        }
    ]
}
